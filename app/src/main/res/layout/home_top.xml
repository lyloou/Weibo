<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_border">

    <ImageView
        android:id="@+id/id_home_top_refresh_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:padding="8dp"
        android:src="@drawable/home_top_refresh_selector" />

    <TextView
        android:id="@+id/id_home_top_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:text="用户名"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/id_home_top_compose_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:padding="8dp"
        android:src="@drawable/home_top_compose_selector" />
</RelativeLayout>