<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/id_home_item_detail_top_include"
        layout="@layout/home_item_detail_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/id_home_item_detail_bottom_include"
        layout="@layout/home_item_detail_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
    <!--//评论列表 -->
    <ListView
        android:id="@+id/home_item_detail_comment_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_home_item_detail_bottom_include"
        android:layout_below="@id/id_home_item_detail_top_include"
        android:visibility="gone" />

    <TextView
        android:id="@+id/id_home_item_detail_content_init_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_home_item_detail_bottom_include"
        android:layout_below="@id/id_home_item_detail_top_include"
        android:gravity="center"
        android:text="正在加载微博正文......"
        android:textSize="18sp"
        android:visibility="visible" />


</RelativeLayout>