<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_item_detail_comment_border"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_home_item_detail_comment_item_floor_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#ff263c88"
        android:paddingTop="8dp"
        android:text="#1楼" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:padding="8dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/id_home_item_detail_comment_item_user_name_tv"
            android:text="用户名"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_home_item_detail_comment_item_time_tv"
            android:text="5-13 19:42"
            android:layout_marginTop="4dp"
            android:textSize="11sp"
            android:textColor="#ffa6a6a6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_home_item_detail_comment_item_content_tv"
            android:layout_marginTop="4dp"
            android:text="现实是人都挤出一身油!"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>